{
  "name": "Kaltura Video Downloader",
  "description": "Adds Download Button for Kaltura Videos",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": [
    "tabs",
    "downloads",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  }
}